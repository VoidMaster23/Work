<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/back"
    tools:context=".InjuryMatrix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/chkNA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Not Applicable"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView18"
                    tools:layout_editor_absoluteX="74dp"
                    tools:layout_editor_absoluteY="52dp"
                    />

                <GridView
                    android:id="@+id/gridLay"
                    android:layout_width="319dp"
                    android:layout_height="425dp"
                    android:layout_marginTop="36dp"
                    android:numColumns="9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chkNA" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="79dp"
                    android:text="Abrasion"
                    app:layout_constraintTop_toBottomOf="@+id/imageView18"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Amputation"
                    app:layout_constraintTop_toBottomOf="@+id/textView31"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Blunt Injury"
                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Crushing Injury"
                    app:layout_constraintTop_toBottomOf="@+id/textView33"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Gunshot Wound"
                    app:layout_constraintTop_toBottomOf="@+id/textView34"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Laceration"
                    app:layout_constraintTop_toBottomOf="@+id/textView35"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Pain"
                    app:layout_constraintTop_toBottomOf="@+id/textView36"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Puncture/Stab"
                    app:layout_constraintTop_toBottomOf="@+id/textView37"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Tissue Swelling"
                    app:layout_constraintTop_toBottomOf="@+id/textView38"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Burn"
                    app:layout_constraintTop_toBottomOf="@+id/textView39"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Dislocation/Fracture"
                    app:layout_constraintTop_toBottomOf="@+id/textView40"
                    tools:layout_editor_absoluteX="16dp" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>