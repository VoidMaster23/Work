<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:orientation="vertical"
    tools:context=".DashBoard">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Jobs"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingLeft="10dp" />

        <ListView
            android:id="@+id/Current_Jobs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/holo_red_light">

        </ListView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="Past Jobs"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/Past_Jobs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="false"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/holo_red_light"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/broadcastText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="BroadCasts"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
        <ListView
            android:id="@+id/broadcastList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="false"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/holo_red_light" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v4.widget.NestedScrollView>