<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="223dp"
                    android:layout_marginLeft="223dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/loginshape"
                    android:onClick="vehicle"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Vehicle Checklists"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button8" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/loginshape"
                    android:onClick="MedRec"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Medical Forms"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    app:layout_constraintTop_toBottomOf="@+id/button4" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/loginshape"
                    android:onClick="BroadCast"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Send Broadcast"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button7" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="204dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/loginshape"
                    android:onClick="Dash"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Dashboard"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button3"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="132dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="44dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginBottom="148dp"
                    android:background="@drawable/loginshape"
                    android:onClick="CheckIn"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Check In"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="44dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginBottom="29dp"
                    android:background="@drawable/loginshape"
                    android:onClick="Attendance"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="View Attendance"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button2"
                    app:layout_constraintEnd_toStartOf="@+id/button9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/loginshape"
                    android:onClick="TimeSheet"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Time Sheets"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button3"
                    app:layout_constraintTop_toBottomOf="@+id/button9" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="166dp"
                    android:layout_height="168dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
