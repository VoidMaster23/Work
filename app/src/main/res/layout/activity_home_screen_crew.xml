<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:padding="36dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/logoContainer"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="223dp"
                    android:layout_marginLeft="223dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/loginshape"
                    android:onClick="vehicle"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Vehicle\nChecklists"
                    android:textColor="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/button8"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/loginshape"
                    android:onClick="MedRec"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Medical Forms"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button8"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/button4"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/loginshape"
                    android:onClick="BroadCast"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Send Broadcast"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button6"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/button7"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/loginshape"
                    android:onClick="Dash"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Dashboard"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button4"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintStart_toEndOf="@+id/button3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="132dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="44dp"
                    android:layout_marginRight="44dp"
                    android:background="@drawable/loginshape"
                    android:onClick="CheckIn"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Check In"
                    android:textColor="@android:color/black"
                    android:layout_toStartOf="@+id/button7"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/button3"
                    android:layout_toLeftOf="@+id/button7"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="44dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginBottom="29dp"
                    android:background="@drawable/loginshape"
                    android:onClick="Attendance"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="View Attendance"
                    android:textColor="@android:color/black"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/button9"
                    android:layout_toLeftOf="@+id/button9" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/loginshape"
                    android:onClick="TimeSheet"
                    android:padding="15dp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Time Sheets"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toTopOf="@+id/button7"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintStart_toEndOf="@+id/button3"
                    android:layout_below="@+id/button9"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
