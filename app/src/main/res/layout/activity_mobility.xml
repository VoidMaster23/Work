<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back">

    <ScrollView
        android:id="@+id/scroll0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="400dp"
                android:layout_height="80dp"
                app:layout_constraintHorizontal_bias="0.317"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobility"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

            <CheckBox
                android:id="@+id/notApplicable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Applicable"
                android:onClick="skip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <TextView
                android:id="@+id/heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select One"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notApplicable" />

            <CheckBox
                android:id="@+id/stretcherChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="stretcherClk"
                android:text="Stretcher"
                app:layout_constraintEnd_toStartOf="@id/wheelchairChk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heading1" />

            <CheckBox
                android:id="@+id/wheelchairChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="wheelchairClk"
                android:text="Wheelchair"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stretcherChk"
                app:layout_constraintTop_toBottomOf="@id/heading1" />

            <CheckBox
                android:id="@+id/walkingChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:onClick="walkingClk"
                android:text="Walking"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stretcherChk" />

            <CheckBox
                android:id="@+id/crutchesChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crutches"
                android:onClick="crutchesClk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/walkingChk"
                app:layout_constraintTop_toBottomOf="@id/stretcherChk" />

            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Select as Many as Applicable"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/crutchesChk" />

            <CheckBox
                android:id="@+id/neckChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neck Collar"
                app:layout_constraintEnd_toStartOf="@id/scoopChk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heading2" />

            <CheckBox
                android:id="@+id/scoopChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scoop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/neckChk"
                app:layout_constraintTop_toBottomOf="@id/heading2" />

            <CheckBox
                android:id="@+id/spinalChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:text="Spinal Board"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoopChk" />


            <CheckBox
                android:id="@+id/vacuumChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacuum Mattress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/spinalChk"
                app:layout_constraintTop_toBottomOf="@id/scoopChk" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>